<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
<!--         Definitions-->
        <service id="Shopware\Production\LocalDelivery\DeliveryBoy\DeliveryBoyDefinition">
            <tag name="shopware.entity.definition" entity="delivery_boy"/>
        </service>

        <service id="Shopware\Production\LocalDelivery\DeliveryPackage\DeliveryPackageDefinition">
            <tag name="shopware.entity.definition" entity="delivery_package"/>
        </service>

        <service id="Shopware\Production\LocalDelivery\DeliveryRoute\DeliveryRouteDefinition">
            <tag name="shopware.entity.definition" entity="delivery_route"/>
        </service>

        <service id="Shopware\Production\LocalDelivery\MapApiRequestLimiter\MapApiRequestLimiterDefinition">
            <tag name="shopware.entity.definition" entity="map_api_request_limiter"/>
        </service>

<!--        Controllers-->
        <service id="Shopware\Production\LocalDelivery\DeliveryRoute\Api\DeliveryRouteController" public="true">
            <argument type="service" id="Shopware\Production\LocalDelivery\DeliveryRoute\Services\DeliveryRouteService"/>
        </service>


<!--        Services-->
        <service id="Shopware\Production\LocalDelivery\DeliveryRoute\Services\MapboxService">
        </service>

        <service id="Shopware\Production\LocalDelivery\DeliveryRoute\Services\DeliveryRouteService">
            <argument type="service" id="Shopware\Production\LocalDelivery\DeliveryRoute\Services\MapboxService"></argument>
            <argument type="service" id="delivery_package.repository"></argument>
            <argument type="service" id="delivery_route.repository"></argument>
        </service>

    </services>
</container>
